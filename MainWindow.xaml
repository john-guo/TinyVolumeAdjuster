<Window x:Class="TinyVolumeAdjuster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyVolumeAdjuster"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        PreviewKeyDown="Window_PreviewKeyDown"
        Title="Tiny Volume Adjuster" Height="450" Width="500" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Border CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#40FFFFFF" Offset="0"/>
                <GradientStop Color="#10FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.3"/>
        </Border.Effect>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Sessions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                            <!-- 应用图标 -->
                            <Image Grid.Column="0"
                                Width="24"
                                Height="24"
                                Source="{Binding Icon}"
                                MouseDown="Window_MouseDown"
                                VerticalAlignment="Center">
                                <Image.Effect>
                                    <DropShadowEffect Color="Black"
                                      BlurRadius="5"
                                      ShadowDepth="1"
                                      Opacity="1"/>
                                </Image.Effect>
                            </Image>

                            <!-- 应用名 -->
                            <TextBlock Grid.Column="1"
                                Text="{Binding DisplayName}"
                                Foreground="White"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                MouseDown="Window_MouseDown"
                                Margin="8,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black"
                                      BlurRadius="5"
                                      ShadowDepth="1"
                                      Opacity="1"/>
                                </TextBlock.Effect>
                            </TextBlock>

                            <!-- 音量滑块 -->
                            <Slider 
                                Grid.Column="2"
                                Minimum="0"
                                Maximum="100"
                                Value="{Binding VolumeLevel, Mode=TwoWay}"
                                VerticalAlignment="Center"
                                Margin="8,0" 
                                SmallChange="1"
                                Background="Transparent"
                            >
                                <Slider.Effect>
                                    <DropShadowEffect Color="Black"
                                      BlurRadius="0"
                                      ShadowDepth="1"
                                      Opacity="0.5"/>
                                </Slider.Effect>
                            </Slider>

                            <!-- 静音按钮 -->
                            <Button 
                                Grid.Column="3"
                                Command="{Binding ToggleMuteCommand}"
                                VerticalAlignment="Center"
                                Width="24"
                                Height="24"
                                Background="Transparent"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="{Binding MuteIcon}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="10"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FFEEEEEE"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FFDDDDDD"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Border>
</Window>
